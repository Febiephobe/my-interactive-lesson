<script>
    // Show the first topic
    document.getElementById('topic1').style.display = 'block';

    // Show quiz
    function showQuiz(topicNumber) {
        document.getElementById('quiz' + topicNumber).style.display = 'block';
    }

    // Check quiz and proceed to next topic if correct
    function checkQuiz(topicNumber, requiredCorrectAnswers) {
        var form = document.getElementById('form' + topicNumber);
        var answers = form.querySelectorAll('input[type="radio"]:checked');
        var correctAnswers = 0;

        answers.forEach(function(answer) {
            if (answer.value === 'correct') {
                correctAnswers++;
            }
        });

        if (correctAnswers >= requiredCorrectAnswers) {
            alert('You passed the quiz! Proceeding to the next topic.');
            form.reset();
            document.getElementById('quiz' + topicNumber).style.display = 'none';
            var nextTopic = document.getElementById('topic' + (topicNumber + 1));
            if (nextTopic) {
                nextTopic.style.display = 'block';
            } else {
                document.getElementById('certificate').style.display = 'block';
            }
        } else {
            alert('You need to answer at least ' + requiredCorrectAnswers + ' questions correctly. Try again.');
        }
    }

    // Generate certificate
    function generateCertificate() {
        var name = document.getElementById('studentName').value;
        if (name) {
            document.getElementById('certificateDetails').innerHTML = '<h3>Certificate of Completion</h3>' +
                '<p>This certifies that <strong>' + name + '</strong> has successfully completed the Fiber Analysis in Forensic Science lesson for Topics 1 and 2.</p>' +
                '<p>Grade: 100%</p>';
        } else {
            alert('Please enter your name to generate the certificate.');
        }
    }
</script>

<script>
    // Initialize quiz progress tracking
    let quizResults = {
        quiz1: false,
        quiz2: false,
        quiz3: false,
        quiz4: false,
        quiz5: false,
    };

    // Show quiz
    function showQuiz(topicNumber) {
        document.getElementById('quiz' + topicNumber).style.display = 'block';
    }

    // Check quiz answers and proceed to the next topic if passed
    function checkQuiz(quizNumber, requiredCorrectAnswers) {
        var form = document.getElementById('form' + quizNumber);
        var answers = form.querySelectorAll('input[type="radio"]:checked');
        var correctAnswers = 0;

        // Check how many answers are correct
        answers.forEach(function(answer) {
            if (answer.value === 'correct') {
                correctAnswers++;
            }
        });

        // Validate if the student has passed the quiz
        if (correctAnswers >= requiredCorrectAnswers) {
            alert('You passed Quiz ' + quizNumber + '! Proceeding to the next topic.');
            quizResults['quiz' + quizNumber] = true;  // Mark the quiz as passed
            form.reset();
            document.getElementById('quiz' + quizNumber).style.display = 'none'; // Hide the quiz
            var nextTopic = document.getElementById('topic' + (quizNumber + 1)); // Show the next topic
            if (nextTopic) {
                nextTopic.style.display = 'block';
            } else {
                // Check if all quizzes are passed before showing the certificate section
                if (checkAllQuizzesPassed()) {
                    document.getElementById('certificate').style.display = 'block';
                }
            }
        } else {
            alert('You need to answer at least ' + requiredCorrectAnswers + ' questions correctly. Try again.');
        }
    }

    // Function to check if all quizzes have been passed
    function checkAllQuizzesPassed() {
        return quizResults.quiz1 && quizResults.quiz2 && quizResults.quiz3 && quizResults.quiz4 && quizResults.quiz5;
    }

    // Generate certificate only if all quizzes are passed
    function generateCertificate() {
        if (checkAllQuizzesPassed()) {
            var name = document.getElementById('studentName').value;
            if (name) {
                document.getElementById('certificateDetails').innerHTML = '<h3>Certificate of Completion</h3>' +
                    '<p>This certifies that <strong>' + name + '</strong> has successfully completed the Fiber Analysis in Forensic Science lessons.</p>' +
                    '<p>Grade: 100%</p>';
            } else {
                alert('Please enter your name to generate the certificate.');
            }
        } else {
            alert('You must pass all quizzes before generating the certificate.');
        }
    }
</script>

